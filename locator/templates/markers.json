[
  {% for marker in markers %}
  {% if not forloop.first %},{% endif %}
  {
    "id": {{ marker.id }},
    "name": "{{ marker.pokemon.name }}",
    "icon": "{{ marker.pokemon.image }}",
    "author": "{{ marker.added_by.username }}",
    "lon": {{ marker.lat }},
    "lat": {{ marker.lon }},
    "found": {{ marker.found }},
    "seen": {{ marker.seen }},
    "nope": {{ marker.nope }},
    "day": {{ marker.day }},
    "hour": {{ marker.hour_found }}
}
  {% endfor %}
]
